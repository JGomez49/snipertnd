{{!-- <pre>{{notesPet}}</pre>
<pre>{{dentalsPet}}</pre> --}}

<div class="main">

  <div class="container">

    <div class="row">

      <div id="liveAlertPlaceholder"></div>

      <div class="row">

        <div class="col">

          <div
            class="card border-primary animate__animated animate__rubberBand my-2"
          >
            <div class="card-header">{{notesPet.title}}</div>
            <img
              src="{{notesPet.path}}"
              class="img-fluid rounded-start my-1"
              alt="..."
              onclick="window.open('{{notesPet.path}}')"
              ;
            />
            <a
              href="/notespet"
              class="btn btn-primary d-md-block mb-1 mt-auto"
            >Close</a>
            <a
              href="/notespet/{{notesPet._id}}/newdentalupload"
              class="btn btn-success d-md-block mb-1 mt-auto"
            >New Dental</a>
          </div>
        </div>

        <div class="col">
          <table class="table table-primary my-2">
            <tr>
              <th scope="row">Created Date: </th>
              <td> {{notesPet.Created_at}} </td>
            </tr>
            <tr>
              <th scope="row">Name: </th>
              <td>{{notesPet.title}}</td>
            </tr>
            <tr>
              <th scope="row">ID: </th>
              <td>{{notesPet._id}}</td>
            </tr>
            <tr>
              <th scope="row">Kin Name: </th>
              <td>{{notesPet.kin_name}}</td>
            </tr>
            <tr>
              <th scope="row">Phone: </th>
              <td>{{notesPet.phone}}</td>
            </tr>
            <tr>
              <th scope="row">Email: </th>
              <td>{{notesPet.email}}</td>
            </tr>
            <tr>
              <th scope="row">How know the program: </th>
              <td>{{notesPet.how}}</td>
            </tr>
            <tr>
              <th scope="row">Breed: </th>
              <td>{{notesPet.breed}}</td>
            </tr>
            <tr>
              <th scope="row">Age: </th>
              <td>{{notesPet.age}}</td>
            </tr>
            <tr>
              <th scope="row">Gender: </th>
              <td>{{notesPet.gender}}</td>
            </tr>
            <tr>
              <th scope="row">Diet: </th>
              <td>{{notesPet.diet}}</td>
            </tr>
            <tr>
              <th scope="row">Health Condition(s): </th>
              <td>{{notesPet.health}}</td>
            </tr>
            <tr>
              <th scope="row">Prev. Cleaning with Anesthesia: </th>
              <td>{{notesPet.withanest}}</td>
            </tr>
            <tr>
              <th scope="row">Prev. Cleaning without Anesthesia: </th>
              <td>{{notesPet.noanest}}</td>
            </tr>
          </table>
        </div>
      </div>

      {{#each dentalsPet}}

        <div class="card mb-3 border-primary">

            <div class="row g-0">

                <div class="col-md-4">
                <img
                    src="{{path}}"
                    class="img-fluid rounded-start"
                    alt="..."
                    onclick="window.open('{{path}}')"
                />
                </div>

                <div class="col-md-8">
                <div class="card-body">

                    <h5
                        class="card-title d-flex justify-content-between align-items-center _card border-primary_"
                        >{{title}}
                        <a href="/notespet/edit/{{_id}}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </h5>
                    <p class="card-text">{{comments}}</p>
                    <p class="card-text"><small
                        class="text-muted"
                    >{{Created_at}}</small></p>
                </div>
                </div>

            </div>

            <form action="/notespet/delete/{{_id}}?_method=delete" method="post" style="padding: 2px;">
                <input type="hidden" name="_method" value="delete">
                <button 
                    type="submit" 
                    class="btn btn-danger btn-block btn-sm">Delete
                </button>
            </form>

        </div>

      {{/each}}

    </div>
  </div>
</div>