<h1>All Notes</h1>

{{!-- <pre>
    {{notes}}
</pre> --}}

<div class="row">
    {{#each notes}}
        <div class="col-md-3 p-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p>{{description}}</p>
                </div>
                {{!-- EL metodo delete se puede usar por el paquete --}}
                {{!-- "method-override". Sin este solo se podria usar post y get. --}}
                {{!-- Esto se configura en el archivo server.js --}}
                <form action="/notes/delete/{{_id}}?_method=delete" method="post" style="padding: 10px;">
                    <input type="hidden" name="_method" value="delete">
                    <button 
                        type="submit" 
                        class="btn btn-danger btn-block btn-sm">Delete
                    </button>
                </form>
            </div>
        </div>
    {{/each}}
</div>