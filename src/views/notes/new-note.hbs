<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="post">
                <div class="form-group">

                    <input 
                        type="text" 
                        name="title"
                        class="form-control"
                        placeholder="Title"
                        autofocus
                    >
                    <br>
                    <textarea 
                        name="description" 
                        id="description" 
                        placeholder="Description"
                        class="form-control"
                    ></textarea>
                    <br>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">
                            save
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>

</div>